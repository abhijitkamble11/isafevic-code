    <script>
            
            function calc1()
            {

            var val_wine = document.getElementById("Wine").value;
            var val_wine_1 = document.getElementById("quantity_1").value;
            document.getElementById('result_1').value = val_wine*val_wine_1;
            
            }
            
    </script>
        


